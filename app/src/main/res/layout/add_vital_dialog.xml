<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgbackgroundtwo"
    >

    <TextView
        android:id="@+id/tvVitalSign"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Vital"
        android:textSize="50dp"
        android:textColor="#FFFFFF"
        />

    <LinearLayout
        android:id="@+id/L1"
        android:layout_below="@id/tvVitalSign"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Name"
            android:textSize="25dp"
            android:paddingTop="15dp"

            android:textColor="#FFFFFF"
            />
        <EditText
            android:id="@+id/edVital_Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Vital Sign Name"
            android:textAlignment="center"
            android:paddingTop="40dp"
            android:paddingStart="-30dp"
            android:textColorHint="#FFFFFF"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/L2"
        android:layout_below="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Data"
            android:textSize="25dp"
            android:paddingTop="15dp"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:id="@+id/edVital_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="data"
            android:textAlignment="center"
            android:paddingTop="40dp"
            android:textColorHint="#FFFFFF"
            />
    </LinearLayout>




</RelativeLayout>