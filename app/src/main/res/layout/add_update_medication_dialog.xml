<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgbackgroundtwo"
    >

    <TextView
        android:id="@+id/tvMedication"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Medication"
        android:textSize="50dp"
        android:textColor="#FFFFFF"
        />

    <LinearLayout
        android:id="@+id/L1"
        android:layout_below="@id/tvMedication"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMedicationName"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Name"
            android:textSize="25dp"
            android:paddingTop="15dp"

            android:textColor="#FFFFFF"
            />
        <EditText
            android:id="@+id/edMedicine_Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Medicine Name"
            android:textAlignment="center"
            android:paddingTop="40dp"
            android:paddingStart="-30dp"
            android:textColorHint="#FFFFFF"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/L2"
        android:layout_below="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Total Quantity"
            android:textSize="25dp"
            android:paddingTop="1dp"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:id="@+id/edMedication_TotalQuantity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Total Quantity"
            android:textAlignment="center"
            android:paddingTop="40dp"
            android:textColorHint="#FFFFFF"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/L3"
        android:layout_below="@+id/L2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvQuantiyTobeTaken"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Quantity"
            android:textSize="25dp"
            android:paddingTop="15dp"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:id="@+id/edMedication_Quantity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Quantity to be taken each day"
            android:textAlignment="center"
            android:paddingTop="40dp"
            android:textColorHint="#FFFFFF"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L4"
        android:layout_below="@+id/L3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TimeTaken"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Time to be taken"
            android:textAlignment="center"
            android:textSize="25dp"
            android:paddingTop="15dp"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/L5"
        android:layout_below="@+id/L4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMorning"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Morning"
            android:textSize="25dp"
            android:paddingTop="15dp"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:id="@+id/edMorning_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Click here to choose time"
            android:textAlignment="center"
            android:inputType="none"
            android:focusable="false"
            android:paddingTop="40dp"
            android:textColorHint="#FFFFFF"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/L6"
        android:layout_below="@+id/L5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvNoon"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Afternoon"
            android:textSize="25dp"
            android:paddingTop="15dp"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:id="@+id/edAfternoon_time"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:hint="Click here to choose time"
            android:textAlignment="center"
            android:paddingTop="40dp"
            android:textColorHint="#FFFFFF"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/L7"
        android:layout_below="@+id/L6"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvNight"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Night"
            android:textSize="25dp"
            android:paddingTop="15dp"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:id="@+id/edNight_time"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:hint="Click here to choose time"
            android:textAlignment="center"
            android:paddingTop="40dp"
            android:textColorHint="#FFFFFF"
            />
    </LinearLayout>




</RelativeLayout>