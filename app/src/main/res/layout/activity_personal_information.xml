<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relativeLayout1"
    android:layout_height="match_parent"
    android:background="@drawable/imgbackgroundtwo"


    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgMyHealth"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="40dp"
        android:src="@drawable/myhealth"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >
    </ImageView>


    <Button
        android:id="@+id/btnAdd_Info"
        android:layout_below="@id/imgMyHealth"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/buttontwo"
        android:fallbackLineSpacing="true"
        android:text="Add information"
        android:textSize="20dp"
        android:paddingStart="10dp"
        >
    </Button>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_below="@id/btnAdd_Info"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttontwo"
        android:fallbackLineSpacing="true"
        android:text="Update Information"

        android:textSize="20dp"
        >
    </Button>
    <Button
        android:id="@+id/btnView"
        android:layout_below="@id/btnUpdate"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttontwo"
        android:fallbackLineSpacing="true"
        android:text="View Information"
        android:textSize="20dp"
        >
    </Button>
    <Button
        android:id="@+id/btnMainmenu"
        android:layout_below="@id/btnView"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttontwo"
        android:fallbackLineSpacing="true"
        android:text="Main Menu"
        android:textSize="20dp"
        >
    </Button>











</RelativeLayout>